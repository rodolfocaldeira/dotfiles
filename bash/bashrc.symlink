#!/bin/bash

# Terminal colours
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad

# Aliases
alias ~="cd ~"
alias ..="cd .."
alias cd..="cd .."

alias ll="ls -l"	
alias la="ls -a"
alias lla="ls -la"

alias grep="grep --color=auto"
alias egrep="egrep --color=auto"

alias rm="rm -i"

alias bash-refresh=". ~/.bashrc"
alias bash-clear-orig="rm -i ~/.*.orig"

alias p="cd ~/Projects"

# Paths
export PATH="~/.bin:$PATH"